{
	"info": {
		"_postman_id": "partyfud-cart-order-api",
		"name": "PartyFud Cart & Order API",
		"description": "API collection for Cart and Order management endpoints",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Cart APIs",
			"item": [
				{
					"name": "Get All Cart Items",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{auth_token}}",
								"type": "text"
							}
						],
						"url": {
							"raw": "{{base_url}}/api/user/cart/items",
							"host": ["{{base_url}}"],
							"path": ["api", "user", "cart", "items"]
						},
						"description": "Get all cart items for the authenticated user"
					},
					"response": []
				},
				{
					"name": "Create Cart Item",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{auth_token}}",
								"type": "text"
							},
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"package_id\": \"package-uuid-here\",\n  \"package_type_id\": \"package-type-uuid-here\",\n  \"location\": \"Dubai, UAE\",\n  \"guests\": 50,\n  \"date\": \"2024-12-25T18:00:00Z\",\n  \"price_at_time\": 5000.00\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{base_url}}/api/user/cart/items",
							"host": ["{{base_url}}"],
							"path": ["api", "user", "cart", "items"]
						},
						"description": "Add a package to the user's cart. package_id and package_type_id are required. Other fields are optional."
					},
					"response": []
				},
				{
					"name": "Update Cart Item",
					"request": {
						"method": "PUT",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{auth_token}}",
								"type": "text"
							},
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"location\": \"Abu Dhabi, UAE\",\n  \"guests\": 75,\n  \"date\": \"2024-12-26T19:00:00Z\",\n  \"price_at_time\": 6000.00\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{base_url}}/api/user/cart/items/:cartItemId",
							"host": ["{{base_url}}"],
							"path": ["api", "user", "cart", "items", ":cartItemId"],
							"variable": [
								{
									"key": "cartItemId",
									"value": "cart-item-uuid-here"
								}
							]
						},
						"description": "Update a cart item. All fields are optional - only include fields you want to update."
					},
					"response": []
				},
				{
					"name": "Delete Cart Item",
					"request": {
						"method": "DELETE",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{auth_token}}",
								"type": "text"
							}
						],
						"url": {
							"raw": "{{base_url}}/api/user/cart/items/:cartItemId",
							"host": ["{{base_url}}"],
							"path": ["api", "user", "cart", "items", ":cartItemId"],
							"variable": [
								{
									"key": "cartItemId",
									"value": "cart-item-uuid-here"
								}
							]
						},
						"description": "Remove a cart item from the user's cart"
					},
					"response": []
				}
			]
		},
		{
			"name": "Order APIs",
			"item": [
				{
					"name": "Get All Orders",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{auth_token}}",
								"type": "text"
							}
						],
						"url": {
							"raw": "{{base_url}}/api/user/orders",
							"host": ["{{base_url}}"],
							"path": ["api", "user", "orders"]
						},
						"description": "Get all orders for the authenticated user"
					},
					"response": []
				},
				{
					"name": "Get Order by ID",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{auth_token}}",
								"type": "text"
							}
						],
						"url": {
							"raw": "{{base_url}}/api/user/orders/:orderId",
							"host": ["{{base_url}}"],
							"path": ["api", "user", "orders", ":orderId"],
							"variable": [
								{
									"key": "orderId",
									"value": "order-uuid-here"
								}
							]
						},
						"description": "Get a single order by its ID"
					},
					"response": []
				},
				{
					"name": "Create Order from Cart Items",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{auth_token}}",
								"type": "text"
							},
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"cart_item_ids\": [\n    \"cart-item-uuid-1\",\n    \"cart-item-uuid-2\"\n  ]\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{base_url}}/api/user/orders",
							"host": ["{{base_url}}"],
							"path": ["api", "user", "orders"]
						},
						"description": "Create an order from existing cart items. The cart items will be removed from the cart after order creation."
					},
					"response": []
				},
				{
					"name": "Create Order with Direct Items",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{auth_token}}",
								"type": "text"
							},
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"items\": [\n    {\n      \"package_id\": \"package-uuid-1\",\n      \"package_type_id\": \"package-type-uuid-1\",\n      \"location\": \"Dubai, UAE\",\n      \"guests\": 50,\n      \"date\": \"2024-12-25T18:00:00Z\",\n      \"price_at_time\": 5000.00\n    },\n    {\n      \"package_id\": \"package-uuid-2\",\n      \"package_type_id\": \"package-type-uuid-2\",\n      \"location\": \"Abu Dhabi, UAE\",\n      \"guests\": 30,\n      \"date\": \"2024-12-26T19:00:00Z\",\n      \"price_at_time\": 3000.00\n    }\n  ]\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{base_url}}/api/user/orders",
							"host": ["{{base_url}}"],
							"path": ["api", "user", "orders"]
						},
						"description": "Create an order directly with items (without using cart). Each item must have package_id, package_type_id, and price_at_time."
					},
					"response": []
				},
				{
					"name": "Update Order",
					"request": {
						"method": "PUT",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{auth_token}}",
								"type": "text"
							},
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"status\": \"CONFIRMED\",\n  \"total_price\": 5500.00\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{base_url}}/api/user/orders/:orderId",
							"host": ["{{base_url}}"],
							"path": ["api", "user", "orders", ":orderId"],
							"variable": [
								{
									"key": "orderId",
									"value": "order-uuid-here"
								}
							]
						},
						"description": "Update an order. Status can be: PENDING, CONFIRMED, PAID, PREPARING, OUT_FOR_DELIVERY, DELIVERED, CANCELLED. Cannot update DELIVERED or CANCELLED orders."
					},
					"response": []
				},
				{
					"name": "Delete Order",
					"request": {
						"method": "DELETE",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{auth_token}}",
								"type": "text"
							}
						],
						"url": {
							"raw": "{{base_url}}/api/user/orders/:orderId",
							"host": ["{{base_url}}"],
							"path": ["api", "user", "orders", ":orderId"],
							"variable": [
								{
									"key": "orderId",
									"value": "order-uuid-here"
								}
							]
						},
						"description": "Delete an order. Only PENDING or CANCELLED orders can be deleted."
					},
					"response": []
				}
			]
		}
	],
	"variable": [
		{
			"key": "base_url",
			"value": "http://localhost:3000",
			"type": "string"
		},
		{
			"key": "auth_token",
			"value": "",
			"type": "string"
		}
	]
}

